{
	"private": true,
	"workspaces": {
		"packages": [
			"api",
			"web",
			"packages/*"
		]
	},
	"devDependencies": {
		"@redwoodjs/core": "^1.0.2",
		"eslint-plugin-unicorn": "^42.0.0"
	},
	"packageManager": "yarn@3.2.0",
	"engines": {
		"node": ">=14.19 <=16.x",
		"yarn": ">=1.15"
	},
	"prisma": {
		"seed": "yarn rw exec seed"
	},
	"eslintConfig": {
		"extends": [
			"@redwoodjs/eslint-config",
			"plugin:unicorn/all"
		],
		"root": true,
		"rules": {
			"unicorn/filename-case": "off",
			"unicorn/template-indent": "off",
			"prettier/prettier": [
				"error",
				{
					"trailingComma": "all",
					"bracketSpacing": false,
					"useTabs": true,
					"tabWidth": 2,
					"semi": true,
					"singleQuote": true,
					"arrowParens": "always",
					"overrides": [
						{
							"files": "Routes.*",
							"options": {
								"printWidth": 999
							}
						}
					]
				}
			]
		}
	}
}
